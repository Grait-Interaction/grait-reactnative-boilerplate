import { PENDING, OK, BAD } from '../config/api'
import { GET_<%= props.name.toUpperCase() %> } from '../actions/<%= props.name.toLowerCase() %>'

const initialState = {
    data: null,
    loading: false,
}

export default (state = initialState, action) => {
    switch (action.type) {

        case GET_<%= props.name.toUpperCase() %>+PENDING:
            return {...state, loading: true}

        case GET_<%= props.name.toUpperCase() %>+BAD:
            return {...state, loading: false}

        case GET_<%= props.name.toUpperCase() %>+OK:
            return {...state, loading: false}

        default:
            return state
    }
}